@model TolokaStudio.Models.ProductCreateModel
@using ViewRes.Home
@using ViewRes.Product
@{
    ViewBag.Title = Product.Create_Product;
}
<script src="@Url.Content("~/Scripts/jquery/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/sumkaScripts/create_product.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/tiny_mce_src.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/combinedHTML-tinymce.js")" type="text/javascript"></script>
<div class="container">
    @using (Html.BeginForm())
    {
   
        <fieldset>
            <div class="row">
                @Html.Raw(System.Web.HttpUtility.HtmlDecode(Model.HtmlBanner))
                <div class="span6">
                    @Html.HiddenFor(model => model.StoreID)
                    @Html.HiddenFor(model => model.EmployeeId)
                    @Html.HiddenFor(model => model.ImagePath)

                    @Html.LabelFor(model => model.Name)
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name, null, new { @class = "required" })
                    @Html.LabelFor(model => model.Price)
                    @Html.EditorFor(model => model.Price, new { @class = "storecreatefield" })
                    @Html.ValidationMessageFor(model => model.Price, null, new { @class = "required" })
                    @Html.DropDownList("Employees", new SelectList(ViewBag.Employees, "Id", "Name", Model.EmployeeId))
                </div>
                <div class="span10">
                    <iframe id="templatesrc" name="templatesrc" src="/Store/ImageUpload" frameborder="0"
                        style="float: left; width: 400px; height: 320px"></iframe>
                    @Html.ValidationMessageFor(model => model.ImagePath, null, new { @class = "required" })
                </div>
            </div>
            <div class="row">
                <div class="span24">
                    <fieldset>
                        @Html.TextAreaFor(m => m.HtmlDetail,
    new Dictionary<string, object> {
      {"class", "html tinymce"}
   })
                    </fieldset>
                </div>
            </div>
            <div class="row">
                <div class="span24">
                    <input type="submit" value="@Home.Create" />
                </div>
            </div>
        </fieldset>
    }
    <div>
        @Html.ActionLink(Home.BackToList, "Index")
    </div>
</div>
<script type="text/javascript">
//<![CDATA[
    $(document).ready(function () {
        $('#templatesrc').load(function () {
            ProductCreator.init();
        });

        ajaxLoad('@Request.Url.Scheme' + "://" + '@Request.Url.DnsSafeHost' + ":" + '@Request.Url.Port' + '@Request.ApplicationPath');

    });
    
//]]>
</script>
